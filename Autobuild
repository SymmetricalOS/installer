#test_command sudo virsh --connect qemu:///system start "archlinux-2" && sudo virt-manager --connect qemu:///system --show-domain-console "archlinux-2"

sudo rm -rf bin/iso/
lime build linux
cp -r scripts/ iso/config/airootfs/tmp/installer/
